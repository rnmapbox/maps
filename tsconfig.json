{
  "compilerOptions": {
    // change to true after we transition to TS
    "declaration": true,
    "preserveSymlinks": true,
    "target": "es6",
    "module": "es6",
    "allowJs": false,
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
  },
  "include": [
    "index.ts",
    "jest.config.ts",
    "src/**/*"
  ]
}